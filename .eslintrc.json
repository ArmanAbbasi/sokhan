{
    "root": true,

    "globals": {
        "require": true,
        "describe": true,
        "it": true,
        "expect": true,
        "chrome": true,
        "SpeechSynthesisUtterance": true
    },

    "env": {
        "amd": true,
        "browser": true,
        "node": true,
        "es6": true
    },

    "parser": "babel-eslint",

    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}